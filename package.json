{
  "name": "hydroapp",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "backend": "node backend/server.js",
    "dev": "concurrently \"npm run backend\" \"expo start\"",
    "dev:windows": "concurrently \"npm run backend\" \"expo start\" --kill-others --names \"backend,expo\"",
    "dev:macos": "concurrently \"npm run backend\" \"expo start\"",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "build:web": "expo export:web",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "expo install --fix && npm run type-check",
    "postinstall": "patch-package || true"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo": "~54.0.18",
    "expo-localization": "^17.0.7",
    "expo-status-bar": "~3.0.8",
    "express": "^4.18.2",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-paper": "^5.11.0",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-navigation": "^4.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/react": "~19.1.0",
    "concurrently": "^8.2.0",
    "eas-cli": "^16.24.1",
    "nodemon": "^3.0.1",
    "typescript": "~5.9.2"
  },
  "private": true
}
